<UserControl x:Class="LibraryManagementApp.Views.AllBooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagementApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <Border Width="1090" Height="810" CornerRadius="10" Background="#F7FFF7" Padding="12.5" Margin="0,25,0,0">

            <StackPanel>
                <TextBlock Text="1-30 from 340" FontWeight="DemiBold"/>
                <WrapPanel>
                    <ItemsControl ItemsSource="{Binding Books}" ItemTemplate="{StaticResource NewBookTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </WrapPanel>
            </StackPanel>
        </Border>

    </StackPanel>
</UserControl>
